<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape>
			<solid
				android:color="#000304" />
			<stroke
				android:width="1dp"
				android:color="#000304" />
			<corners
				android:topLeftRadius="0dp"
				android:topRightRadius="20dp"
				android:bottomLeftRadius="0dp"
				android:bottomRightRadius="20dp"/>
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#FFD600"
				android:endColor="#FFF176"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#FFD600" />
			<corners
				android:topLeftRadius="0dp"
				android:topRightRadius="20dp"
				android:bottomLeftRadius="0dp"
				android:bottomRightRadius="20dp"/>
			<padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
		</shape>
	</item>
</selector>