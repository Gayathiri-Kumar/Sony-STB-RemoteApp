<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
          android:shape="oval"  >
            <solid
                android:color="#000304" />
            <stroke
                android:width="1dp"
                android:color="#000304" />
            <size
                android:width="50dp"
            android:height="50dp"/>
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#000304"
                android:endColor="#5F6263"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#444647" />
            <size
                android:width="50dp"
                android:height="50dp"/>
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
</selector>