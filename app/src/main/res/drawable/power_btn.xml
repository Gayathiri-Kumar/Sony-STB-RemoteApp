<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#000304" />
            <stroke
                android:width="1dp"
                android:color="#000304" />
            <corners
                android:topLeftRadius="26dp"
                android:topRightRadius="26dp"
                android:bottomLeftRadius="26dp"
                android:bottomRightRadius="26dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#EC0909"
                android:endColor="#EF043F"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#EC0B0B" />
            <corners
                android:topLeftRadius="26dp"
                android:topRightRadius="26dp"
                android:bottomLeftRadius="26dp"
                android:bottomRightRadius="26dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>